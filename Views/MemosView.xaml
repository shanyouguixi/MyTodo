<UserControl x:Class="MyTodo.Views.MemosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyTodo.Views"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"
                              MinWidth="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   Margin="2"
                   Background="WhiteSmoke"
                   MinWidth="200">
            <TextBox x:Name="DemoItemsSearchBox"
                     Padding="5"
                     Width="180"
                     materialDesign:HintAssist.Hint="Search"
                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     DockPanel.Dock="Top"
                     Text="{Binding SearchWord,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding SearchWordChangedCommand}"
                                               CommandParameter="{Binding Text, ElementName=DemoItemsSearchBox}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <StackPanel Margin="5,10"
                        Width="170"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                <TextBlock Text="标签:"
                           Width="60"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                <ComboBox Margin="5,0,0,0"
                          ItemsSource="{Binding TagList}"
                          Width="80"
                          HorizontalAlignment="Center"
                          x:Name="tagCombo">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding TagSelectCommand}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ComboBox}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tag"
                                                         Foreground="{Binding color}" />
                                <TextBlock Text="{Binding name}"
                                           Margin="5,0" />
                            </StackPanel>

                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button  Margin="10,0,0,0"
                         Padding="0"
                         Style="{StaticResource MaterialDesignFlatLightButton}"
                         Click="Button_Click">
                    <materialDesign:PackIcon Kind="Close"
                                             Foreground="Red"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Top" />
                </Button>
            </StackPanel>
            <Button   Width="160"
                      DockPanel.Dock="Top"
                      Click="Button_Click"
                      Content="新增">
            </Button>


            <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">

                <ListBox x:Name="menuBar"
                         ItemContainerStyle="{StaticResource MyListBoxItemStyle}"
                         Margin="0,16,0,16"
                         ItemsSource="{Binding MemoList}"
                         SelectedIndex="{Binding SelectedIndex}"
                         SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignNavigationPrimaryListBox}"
                         SelectionChanged="menuBar_Selected">
                    <ListBox.Resources>
                        <Style TargetType="ScrollBar"
                               BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                    </ListBox.Resources>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding MemoSelectCommand}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel 
                                             Background="Transparent"
                                             VerticalAlignment="Center"
                                             Grid.Column="0"
                                             Orientation="Horizontal" Margin="10">
                                    <TextBlock Text="{Binding title}"
                                                Padding="5" Margin="10,0,30,0"/>
                                    <materialDesign:PackIcon Kind="Tag"
                                                             Foreground="{Binding color}"
                                                             VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1">
                                    <materialDesign:PopupBox IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                             StaysOpen="True">
                                        <Grid Width="40">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <materialDesign:PackIcon Kind="NotebookEdit"
                                                                     Grid.Row="0"
                                                                     Margin="5"
                                                                     Width="30" />
                                            <materialDesign:PackIcon Kind="DeleteForever"
                                                                     Grid.Row="1"
                                                                     Margin="5"
                                                                     Width="30" />
                                        </Grid>
                                    </materialDesign:PopupBox>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </materialDesign:TransitioningContent>
        </DockPanel>

        <wv2:WebView2 Name="webView"
                      Grid.Column="1" />
    </Grid>

</UserControl>
