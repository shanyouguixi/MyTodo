<UserControl
    x:Class="MyTodo.Views.AlarmClockView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyTodo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBox
                x:Name="PART_TextBox"
                Width="150"
                Text="{Binding SelectedDateTimeStr}" />

            <Button Command="{Binding SetAlarmCommand}" Content="Set Alarm" />
            <Button Command="{Binding CancelAlarmCommand}" Content="Cancel Alarm" />
        </StackPanel>
        <!--  在窗口底部放置一个占位控件  -->
        <Rectangle
            Height="50"
            VerticalAlignment="Bottom"
            Fill="Transparent" />
        <!--  定义弹出消息的 Popup 控件  -->
        <Popup
            x:Name="popup"
            IsOpen="{Binding IsOpen}"
            Placement="Bottom">
            <Border
                Background="LightYellow"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel Margin="4">
                    <TextBlock FontWeight="Bold" Text="Binding SelectedDateTime" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
